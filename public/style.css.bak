/* ============ RESET & BASE ============ */
*,
*::before,
*::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    -ms-overflow-style: none;
    /* IE and Edge */
    scrollbar-width: none;
    /* Firefox */
}

/* Hide scrollbar for Chrome, Safari and Opera */
::-webkit-scrollbar {
    display: none;
}

body {
    background: #050510;
    overflow: hidden;
    font-family: 'Rajdhani', sans-serif;
    color: #e0e0e0;
    width: 100vw;
    height: 100vh;
}

canvas {
    display: block;
    width: 100vw;
    height: 100vh;
    cursor: crosshair;
}

/* ============ OVERLAYS ============ */
.overlay {
    position: fixed;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 100;
    background: radial-gradient(ellipse at center, rgba(8, 8, 30, 0.95) 0%, rgba(3, 3, 15, 0.98) 100%);
    animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

/* ============ LOBBY ============ */
.lobby-container {
    text-align: center;
    max-width: 1400px;
    width: 95vw;
    max-height: 95vh;
    overflow-y: auto;
}

.game-title {
    font-family: 'Press Start 2P', monospace;
    font-size: 3.5rem;
    font-weight: 900;
    background: linear-gradient(135deg, #4cc9f0, #7b2cbf, #f72585);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: 0.2em;
    text-shadow: 0 0 60px rgba(76, 201, 240, 0.3);
    margin-bottom: 0.15em;
}

.game-subtitle {
    font-family: 'Orbitron', sans-serif;
    font-size: 0.9rem;
    color: #4cc9f0;
    letter-spacing: 0.5em;
    margin-bottom: 2em;
    opacity: 0.7;
}

input[type="text"] {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(76, 201, 240, 0.3);
    color: #fff;
    padding: 12px 20px;
    font-size: 1.1rem;
    font-family: 'Orbitron', sans-serif;
    text-align: center;
    letter-spacing: 0.2em;
    border-radius: 8px;
    outline: none;
    width: 280px;
    transition: border-color 0.3s, box-shadow 0.3s;
}

input[type="text"]:focus {
    border-color: #4cc9f0;
    box-shadow: 0 0 20px rgba(76, 201, 240, 0.2);
}

input[type="text"]::placeholder {
    color: rgba(255, 255, 255, 0.25);
    letter-spacing: 0.15em;
}

.btn-group {
    display: flex;
    flex-direction: column;
    gap: 12px;
    align-items: center;
    margin-top: 20px;
}

.join-row {
    display: flex;
    gap: 10px;
    align-items: center;
}

.join-row input {
    width: 140px;
    font-size: 1rem;
}

.btn {
    font-family: 'Orbitron', sans-serif;
    font-size: 0.9rem;
    font-weight: 700;
    padding: 14px 36px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    letter-spacing: 0.15em;
    transition: all 0.3s ease;
    text-transform: uppercase;
}

.btn-primary {
    background: linear-gradient(135deg, #4cc9f0, #3a86ff);
    color: #fff;
    box-shadow: 0 4px 20px rgba(76, 201, 240, 0.3);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 30px rgba(76, 201, 240, 0.5);
}

.btn-secondary {
    background: rgba(76, 201, 240, 0.15);
    color: #4cc9f0;
    border: 1px solid rgba(76, 201, 240, 0.4);
}

.btn-secondary:hover {
    background: rgba(76, 201, 240, 0.25);
}

.btn-ready {
    background: rgba(6, 214, 160, 0.15);
    color: #06d6a0;
    border: 1px solid rgba(6, 214, 160, 0.4);
    width: 200px;
}

.btn-ready:hover,
.btn-ready.active {
    background: #06d6a0;
    color: #050510;
}

.btn-start {
    background: linear-gradient(135deg, #f72585, #7b2cbf);
    color: #fff;
    box-shadow: 0 4px 20px rgba(247, 37, 133, 0.3);
    width: 280px;
    font-size: 1.1rem;
}

.btn-start:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 30px rgba(247, 37, 133, 0.5);
}

.btn-start:disabled {
    opacity: 0.4;
    cursor: not-allowed;
    transform: none;
}

.error-msg {
    color: #e63946;
    font-size: 0.85rem;
    margin-top: 10px;
    min-height: 1.5em;
}

.room-code-display {
    font-family: 'Courier New', monospace;
    font-size: 1.8rem;
    color: #4cc9f0;
    margin-bottom: 24px;
    letter-spacing: 0.3em;
}

.room-code-display span {
    background: rgba(76, 201, 240, 0.15);
    padding: 8px 20px;
    border-radius: 6px;
    border: 1px solid rgba(76, 201, 240, 0.3);
}

.copy-btn {
    background: rgba(76, 201, 240, 0.15);
    border: 1px solid rgba(76, 201, 240, 0.3);
    color: #4cc9f0;
    font-size: 1.2rem;
    padding: 6px 10px;
    border-radius: 6px;
    cursor: pointer;
    margin-left: 10px;
    transition: all 0.2s ease;
    vertical-align: middle;
}

.copy-btn:hover {
    background: rgba(76, 201, 240, 0.3);
    border-color: #4cc9f0;
    transform: scale(1.1);
}

.copy-btn:active {
    transform: scale(0.95);
}

/* ============ ROLE CARDS ============ */
.role-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    margin-bottom: 28px;
}

@media (max-width: 800px) {
    .role-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

.role-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    padding: 28px 20px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.role-card:hover {
    background: rgba(255, 255, 255, 0.06);
    transform: translateY(-3px);
}

.role-card.selected {
    border-color: #4cc9f0;
    background: rgba(76, 201, 240, 0.08);
    box-shadow: 0 0 20px rgba(76, 201, 240, 0.15);
}

.role-card.taken {
    opacity: 0.3;
    pointer-events: none;
}

.role-icon {
    font-size: 3.2rem;
    margin-bottom: 12px;
}

.role-vanguard {
    color: #4cc9f0;
}

.role-engineer {
    color: #f4a261;
}

.role-scout {
    color: #06d6a0;
}

.role-medic {
    color: #ef476f;
}

.role-card h3 {
    font-family: 'Press Start 2P', monospace;
    font-size: 0.9rem;
    letter-spacing: 0.15em;
    margin-bottom: 10px;
}

.role-stats {
    display: flex;
    justify-content: center;
    gap: 18px;
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 12px;
}

.role-desc {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.55);
    margin-bottom: 12px;
    line-height: 1.6;
}

.role-ability {
    font-size: 0.85rem;
    color: #ffd166;
    opacity: 0.85;
}

/* ============ PLAYER LIST ============ */
.player-list {
    display: flex;
    justify-content: center;
    gap: 12px;
    flex-wrap: wrap;
    margin-bottom: 20px;
}

.player-tag {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 10px 20px;
    font-size: 1rem;
    display: flex;
    align-items: center;
    gap: 10px;
}

.player-tag.ready {
    border-color: #06d6a0;
}

.player-tag .ready-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #555;
}

.player-tag.ready .ready-dot {
    background: #06d6a0;
    box-shadow: 0 0 8px #06d6a0;
}

.player-tag .host-badge {
    font-size: 0.7rem;
    color: #ffd166;
    font-family: 'Orbitron', sans-serif;
}

.lobby-actions {
    display: flex;
    justify-content: center;
    gap: 16px;
    flex-wrap: wrap;
}

/* ============ HUD ============ */
#hud {
    pointer-events: none;
}

.hud-timer {
    position: fixed;
    top: 16px;
    left: 50%;
    transform: translateX(-50%);
    font-family: 'Orbitron', sans-serif;
    font-size: 1.8rem;
    font-weight: 700;
    color: #fff;
    text-shadow: 0 0 20px rgba(76, 201, 240, 0.5);
    z-index: 50;
    letter-spacing: 0.1em;
}

.hud-timer.critical {
    color: #e63946;
    text-shadow: 0 0 20px rgba(230, 57, 70, 0.7);
    animation: pulse 0.5s ease-in-out infinite alternate;
}

@keyframes pulse {
    from {
        opacity: 1;
    }

    to {
        opacity: 0.5;
    }
}

.hud-objective {
    position: fixed;
    top: 60px;
    left: 50%;
    transform: translateX(-50%);
    font-family: 'Orbitron', sans-serif;
    font-size: 0.8rem;
    color: #ffd166;
    letter-spacing: 0.15em;
    z-index: 50;
    text-align: center;
    text-shadow: 0 0 10px rgba(255, 209, 102, 0.3);
}

.hud-phase {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-family: 'Orbitron', sans-serif;
    font-size: 2rem;
    font-weight: 900;
    color: #fff;
    letter-spacing: 0.2em;
    z-index: 50;
    text-align: center;
    text-shadow: 0 0 30px rgba(76, 201, 240, 0.5);
    opacity: 0;
    transition: opacity 0.5s ease;
    pointer-events: none;
}

.hud-phase.show {
    opacity: 1;
}

.hud-player {
    position: fixed;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    gap: 16px;
    z-index: 50;
}

.hud-hp-bar-container {
    width: 300px;
    height: 24px;
    background: rgba(0, 0, 0, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 12px;
    position: relative;
    overflow: hidden;
}

.hud-hp-bar {
    height: 100%;
    background: linear-gradient(90deg, #06d6a0, #4cc9f0);
    border-radius: 12px;
    transition: width 0.2s ease;
}

.hud-hp-bar.low {
    background: linear-gradient(90deg, #e63946, #f4a261);
}

.hud-hp-bar.mid {
    background: linear-gradient(90deg, #f4a261, #ffd166);
}

.hud-hp-text {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Orbitron', sans-serif;
    font-size: 0.7rem;
    font-weight: 700;
    color: #fff;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.8);
}

.hud-ability {
    width: 50px;
    height: 50px;
    border-radius: 10px;
    background: rgba(0, 0, 0, 0.6);
    border: 2px solid rgba(76, 201, 240, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
}

.hud-ability.ready {
    border-color: #4cc9f0;
    box-shadow: 0 0 12px rgba(76, 201, 240, 0.4);
}

.hud-ability span {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.1rem;
    font-weight: 700;
    color: #fff;
    z-index: 2;
}

.hud-ability-cd {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 0%;
    background: rgba(76, 201, 240, 0.2);
    transition: height 0.3s ease;
}

.hud-controls {
    position: fixed;
    bottom: 8px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 0.65rem;
    color: rgba(255, 255, 255, 0.25);
    letter-spacing: 0.1em;
    z-index: 50;
}

/* ============ GAME OVER ============ */
.gameover-container {
    text-align: center;
    max-width: 600px;
    width: 90vw;
}

.gameover-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 3rem;
    font-weight: 900;
    margin-bottom: 0.2em;
    letter-spacing: 0.15em;
}

.gameover-title.victory {
    background: linear-gradient(135deg, #06d6a0, #4cc9f0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.gameover-title.defeat {
    color: #ff0000;
}

.gameover-subtitle {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 2em;
}

.final-scoreboard {
    margin-bottom: 2em;
}

.score-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 16px;
    border-radius: 8px;
    margin-bottom: 6px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.06);
    font-size: 0.85rem;
}

.score-row:first-child {
    border-color: rgba(255, 209, 102, 0.3);
    background: rgba(255, 209, 102, 0.05);
}

.score-row .score-name {
    font-weight: 600;
    min-width: 100px;
    text-align: left;
}

.score-row .score-role {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.4);
    min-width: 80px;
}

.score-row .score-stats {
    display: flex;
    gap: 16px;
    font-size: 0.72rem;
    color: rgba(255, 255, 255, 0.6);
}

/* ============ SCOREBOARD (in-game Tab) ============ */
.scoreboard-overlay {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(5, 5, 16, 0.92);
    border: 1px solid rgba(76, 201, 240, 0.2);
    border-radius: 16px;
    padding: 24px;
    z-index: 60;
    min-width: 400px;
    backdrop-filter: blur(10px);
}

.scoreboard-overlay h2 {
    font-family: 'Orbitron', sans-serif;
    font-size: 0.9rem;
    text-align: center;
    color: #4cc9f0;
    letter-spacing: 0.2em;
    margin-bottom: 16px;
}

/* ============ MOBILE BLOCK ============ */
.mobile-block {
    position: fixed;
    inset: 0;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    background: radial-gradient(ellipse at 50% 40%, #0e1a2b 0%, #050510 70%);
    animation: fadeIn 0.6s ease;
}

.mobile-block-content {
    text-align: center;
    padding: 40px 32px;
    max-width: 360px;
}

.mobile-block-icon {
    font-size: 4rem;
    margin-bottom: 16px;
    animation: float 3s ease-in-out infinite;
}

@keyframes float {

    0%,
    100% {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-12px);
    }
}

.mobile-block-title {
    font-family: 'Press Start 2P', monospace;
    font-size: 2.6rem;
    font-weight: 900;
    background: linear-gradient(135deg, #4cc9f0, #7b2cbf, #f72585);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: 0.2em;
    margin-bottom: 20px;
}

.mobile-block-divider {
    width: 60px;
    height: 2px;
    background: linear-gradient(90deg, transparent, #4cc9f0, transparent);
    margin: 0 auto 24px;
}

.mobile-block-msg {
    font-family: 'Rajdhani', sans-serif;
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.6;
    margin-bottom: 28px;
}

.mobile-block-coming {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.3rem;
    font-weight: 700;
    letter-spacing: 0.4em;
    background: linear-gradient(90deg, #4cc9f0, #06d6a0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 16px;
}

.mobile-block-dots {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-bottom: 28px;
}

.mobile-block-dots span {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #4cc9f0;
    opacity: 0.3;
    animation: dotPulse 1.4s ease-in-out infinite;
}

.mobile-block-dots span:nth-child(2) {
    animation-delay: 0.2s;
}

.mobile-block-dots span:nth-child(3) {
    animation-delay: 0.4s;
}

@keyframes dotPulse {

    0%,
    100% {
        opacity: 0.2;
        transform: scale(1);
    }

    50% {
        opacity: 1;
        transform: scale(1.3);
    }
}

.mobile-block-hint {
    font-family: 'Rajdhani', sans-serif;
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.3);
    line-height: 1.5;
}

/* ============ CHAT ============ */
.hud-chat {
    position: fixed;
    bottom: 80px;
    left: 20px;
    width: 320px;
    max-height: 250px;
    z-index: 60;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

.chat-messages {
    overflow-y: hidden;
    max-height: 200px;
    display: flex;
    flex-direction: column;
    gap: 4px;
    margin-bottom: 8px;
    pointer-events: none;
}

.chat-message {
    background: rgba(0, 0, 0, 0.5);
    padding: 6px 10px;
    border-radius: 6px;
    border-left: 3px solid rgba(255, 255, 255, 0.2);
    font-size: 0.85rem;
    word-wrap: break-word;
    animation: slideIn 0.3s ease;
    transition: opacity 1s ease;
}

.chat-message.fade-out {
    opacity: 0;
}

.chat-message .author {
    font-weight: 700;
    margin-right: 6px;
    font-family: 'Orbitron', sans-serif;
    font-size: 0.75rem;
}

.chat-input {
    background: rgba(0, 0, 0, 0.8);
    border: 1px solid rgba(76, 201, 240, 0.6);
    color: #fff;
    padding: 10px 14px;
    border-radius: 6px;
    font-family: 'Rajdhani', sans-serif;
    font-size: 1rem;
    outline: none;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.7);
    width: 100%;
}

.chat-input:focus {
    border-color: #4cc9f0;
    box-shadow: 0 0 15px rgba(76, 201, 240, 0.4);
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateX(-10px);
    }

    to {
        opacity: 1;
        transform: translateX(0);
    }
}

/* ============ DISCLAIMER & GUIDELINES ============ */
.disclaimer-container {
    text-align: center;
    max-width: 650px;
    width: 92vw;
}

.disclaimer-box {
    background: rgba(10, 14, 26, 0.95);
    border: 1px solid rgba(76, 201, 240, 0.3);
    border-radius: 12px;
    padding: 40px 36px;
    position: relative;
    overflow: hidden;
}

.disclaimer-box::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, #4cc9f0, transparent);
    animation: scanLine 3s linear infinite;
}

@keyframes scanLine {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
}

.disclaimer-header {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.3rem;
    color: #e63946;
    margin-bottom: 24px;
    letter-spacing: 0.2em;
    animation: disclaimerHeaderPulse 2s ease-in-out infinite;
}

@keyframes disclaimerHeaderPulse {
    0%, 100% { text-shadow: 0 0 10px rgba(230, 57, 70, 0.3); }
    50% { text-shadow: 0 0 25px rgba(230, 57, 70, 0.6); }
}

.disclaimer-text {
    font-family: 'Rajdhani', sans-serif;
    font-size: 0.95rem;
    color: rgba(230, 241, 255, 0.7);
    line-height: 1.8;
    text-align: left;
    min-height: 80px;
    margin-bottom: 20px;
    border-left: 2px solid rgba(76, 201, 240, 0.3);
    padding-left: 16px;
}

.disclaimer-text .cursor-blink {
    display: inline-block;
    width: 8px;
    height: 16px;
    background: #4cc9f0;
    vertical-align: middle;
    animation: cursorBlink 0.6s ease-in-out infinite;
}

@keyframes cursorBlink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
}

.guidelines-box {
    background: rgba(76, 201, 240, 0.04);
    border: 1px solid rgba(76, 201, 240, 0.15);
    border-radius: 8px;
    padding: 20px 24px;
    margin-top: 18px;
    text-align: left;
    animation: fadeSlideIn 0.6s ease-out;
}

@keyframes fadeSlideIn {
    from { opacity: 0; transform: translateY(15px); }
    to { opacity: 1; transform: translateY(0); }
}

.guidelines-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 0.85rem;
    color: #4cc9f0;
    margin-bottom: 14px;
    letter-spacing: 0.15em;
}

.guidelines-list {
    list-style: none;
    padding: 0;
    margin: 0 0 14px 0;
}

.guidelines-list li {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 6px 0;
    font-family: 'Rajdhani', sans-serif;
    font-size: 0.9rem;
    color: rgba(230, 241, 255, 0.7);
    border-bottom: 1px solid rgba(255, 255, 255, 0.04);
}

.guidelines-list li:last-child { border-bottom: none; }

.gl-key {
    display: inline-block;
    min-width: 55px;
    padding: 3px 8px;
    background: rgba(76, 201, 240, 0.12);
    border: 1px solid rgba(76, 201, 240, 0.3);
    border-radius: 4px;
    font-family: 'Orbitron', sans-serif;
    font-size: 0.6rem;
    color: #4cc9f0;
    text-align: center;
    letter-spacing: 0.1em;
}

.guidelines-note {
    font-family: 'Rajdhani', sans-serif;
    font-size: 0.82rem;
    color: rgba(230, 241, 255, 0.45);
    margin-top: 10px;
    line-height: 1.5;
    font-style: italic;
}

.disclaimer-btn {
    margin-top: 24px;
    animation: fadeSlideIn 0.5s ease-out;
}

/* ═══════════════════════════════════════════════════════
   TRIVIA TERMINAL  –  Sci-fi HUD panel
   ═══════════════════════════════════════════════════════ */
#triviaOverlay {
    z-index: 5000;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(4px);
}

.trivia-terminal {
    position: relative;
    width: min(700px, 92vw);
    display: flex;
    flex-direction: column;
    border-radius: 8px;
    box-shadow:
        0 0 40px rgba(0, 180, 255, 0.25),
        inset 0 0 60px rgba(0, 0, 0, 0.6);
    animation: ttAppear 0.35s ease-out;
}

@keyframes ttAppear {
    from { transform: scale(0.92) translateY(20px); opacity: 0; }
    to   { transform: scale(1) translateY(0); opacity: 1; }
}

/* ── Bezels (top / bottom chrome strips) ── */
.tt-bezel {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: linear-gradient(180deg, #1a2035 0%, #0e1525 100%);
    border: 1px solid #2a3a5c;
}
.tt-bezel-top {
    border-radius: 8px 8px 0 0;
    border-bottom: 2px solid #2a3a5c;
}
.tt-bezel-bottom {
    border-radius: 0 0 8px 8px;
    border-top: 2px solid #2a3a5c;
}

.tt-light {
    width: 10px; height: 10px;
    border-radius: 50%;
    box-shadow: 0 0 6px currentColor;
}
.tt-light-green { background: #0f0; color: #0f0; animation: ttBlink 2s infinite; }
.tt-light-red   { background: #f33; color: #f33; animation: ttBlink 1.4s infinite 0.3s; }
.tt-light-amber { background: #f90; color: #f90; animation: ttBlink 1.8s infinite 0.6s; }
@keyframes ttBlink {
    0%, 80% { opacity: 1; }
    90%     { opacity: 0.3; }
    100%    { opacity: 1; }
}

.tt-slot {
    flex: 0 0 50px; height: 6px;
    background: #0a0f1a;
    border: 1px solid #2a3a5c;
    border-radius: 2px;
}
.tt-slot-wide { flex: 0 0 100px; }

.tt-light-bar {
    display: flex; gap: 4px; margin-left: auto;
}
.tt-light-bar span {
    display: block; width: 12px; height: 8px;
    background: #00b4ff;
    opacity: 0.7;
    border-radius: 1px;
    animation: ttBarPulse 1.2s ease-in-out infinite;
}
.tt-light-bar span:nth-child(2) { animation-delay: 0.15s; }
.tt-light-bar span:nth-child(3) { animation-delay: 0.3s; }
.tt-light-bar span:nth-child(4) { animation-delay: 0.45s; }
@keyframes ttBarPulse {
    0%, 100% { opacity: 0.4; }
    50%      { opacity: 1; }
}

/* ── Side decorations ── */
.tt-side {
    position: absolute;
    top: 50px; bottom: 50px;
    width: 28px;
    display: flex; flex-direction: column;
    align-items: center; justify-content: space-between;
    padding: 10px 0;
    background: linear-gradient(180deg, #151d2e, #0c1220);
    border: 1px solid #2a3a5c;
}
.tt-side-left  { left: -29px; border-radius: 6px 0 0 6px; border-right: none; }
.tt-side-right { right: -29px; border-radius: 0 6px 6px 0; border-left: none; }

.tt-bolt {
    width: 10px; height: 10px;
    border-radius: 50%;
    background: radial-gradient(circle at 30% 30%, #3a4e72, #1a2035);
    border: 1px solid #4a6a9a;
}

.tt-vert-bar {
    display: flex; flex-direction: column; gap: 6px;
}
.tt-vert-bar span {
    display: block; width: 8px; height: 14px;
    background: #00b4ff;
    opacity: 0.6;
    border-radius: 1px;
    animation: ttBarPulse 1.5s ease-in-out infinite;
}
.tt-vert-bar span:nth-child(odd) { animation-delay: 0.3s; }

/* ── Main screen ── */
.tt-screen {
    position: relative;
    background: linear-gradient(170deg, #070d1a 0%, #0a1428 50%, #0d1830 100%);
    padding: 28px 36px 20px;
    overflow: hidden;
    min-height: 340px;
}

.tt-scanline {
    pointer-events: none;
    position: absolute; inset: 0;
    background: repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(0, 180, 255, 0.03) 2px,
        rgba(0, 180, 255, 0.03) 4px
    );
    z-index: 1;
}

.tt-header {
    font-family: 'Orbitron', sans-serif;
    font-size: 13px;
    font-weight: 700;
    color: #00b4ff;
    text-align: center;
    text-shadow: 0 0 10px rgba(0, 180, 255, 0.6);
    letter-spacing: 4px;
    position: relative;
    z-index: 2;
}

.tt-divider {
    height: 2px;
    background: linear-gradient(90deg, transparent, #00b4ff, transparent);
    margin: 10px 0;
    opacity: 0.5;
    position: relative;
    z-index: 2;
}
.tt-divider-thin { height: 1px; opacity: 0.3; }

.tt-counter {
    font-family: 'Orbitron', sans-serif;
    font-size: 12px;
    font-weight: 700;
    color: #00b4ff;
    text-align: center;
    letter-spacing: 3px;
    text-shadow: 0 0 8px rgba(0, 180, 255, 0.4);
    position: relative;
    z-index: 2;
}

.tt-question {
    font-family: 'Rajdhani', sans-serif;
    font-size: 22px;
    font-weight: 600;
    color: #e0f0ff;
    text-align: left;
    margin: 18px 0 22px;
    line-height: 1.35;
    text-shadow: 0 0 6px rgba(0, 180, 255, 0.15);
    position: relative;
    z-index: 2;
}

/* ── Option buttons ── */
.tt-options {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-left: 24px;
    position: relative;
    z-index: 2;
}

.tt-opt {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 10px 18px;
    background: rgba(0, 180, 255, 0.06);
    border: 1px solid rgba(0, 180, 255, 0.2);
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.15s ease;
    position: relative;
    overflow: hidden;
}
.tt-opt::before {
    content: '';
    position: absolute; inset: 0;
    background: linear-gradient(90deg, rgba(0, 180, 255, 0.1), transparent);
    opacity: 0;
    transition: opacity 0.15s;
}
.tt-opt:hover {
    background: rgba(0, 180, 255, 0.15);
    border-color: #00b4ff;
    transform: translateX(4px);
    box-shadow: 0 0 12px rgba(0, 180, 255, 0.2);
}
.tt-opt:hover::before { opacity: 1; }
.tt-opt:active {
    transform: translateX(4px) scale(0.98);
}

.tt-opt-label {
    font-family: 'Orbitron', sans-serif;
    font-size: 14px;
    font-weight: 700;
    color: #00b4ff;
    min-width: 28px;
}

.tt-opt-text {
    font-family: 'Rajdhani', sans-serif;
    font-size: 18px;
    font-weight: 600;
    color: #c0daf0;
}
.tt-opt:hover .tt-opt-text { color: #fff; }

.tt-opt.tt-correct {
    background: rgba(0, 255, 100, 0.2) !important;
    border-color: #0f0 !important;
    box-shadow: 0 0 16px rgba(0, 255, 100, 0.3);
}
.tt-opt.tt-wrong {
    background: rgba(255, 50, 50, 0.2) !important;
    border-color: #f33 !important;
    box-shadow: 0 0 16px rgba(255, 50, 50, 0.3);
}

/* ── Footer / Timer ── */
.tt-footer {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-top: 24px;
    position: relative;
    z-index: 2;
}

.tt-radar {
    position: relative;
    width: 48px; height: 48px;
    border-radius: 50%;
    background: radial-gradient(circle, #0a1428, #060d1a);
    border: 2px solid #1a3a5c;
    overflow: hidden;
    flex-shrink: 0;
}
.tt-radar-ring {
    position: absolute; inset: 8px;
    border-radius: 50%;
    border: 1px solid rgba(0, 180, 255, 0.25);
}
.tt-radar-sweep {
    position: absolute; top: 50%; left: 50%;
    width: 50%; height: 2px;
    background: linear-gradient(90deg, rgba(0, 180, 255, 0.6), transparent);
    transform-origin: left center;
    animation: ttSweep 2s linear infinite;
}
@keyframes ttSweep { to { transform: rotate(360deg); } }
.tt-radar-dot {
    position: absolute;
    top: 30%; left: 60%;
    width: 3px; height: 3px;
    border-radius: 50%;
    background: #0f0;
    box-shadow: 0 0 4px #0f0;
    animation: ttDotBlink 1s infinite;
}
@keyframes ttDotBlink { 50% { opacity: 0.2; } }

.tt-timer {
    font-family: 'Orbitron', sans-serif;
    font-size: 14px;
    font-weight: 700;
    color: #00b4ff;
    letter-spacing: 3px;
    text-shadow: 0 0 8px rgba(0, 180, 255, 0.5);
}
.tt-timer span {
    font-size: 20px;
    color: #fff;
    text-shadow: 0 0 12px rgba(0, 180, 255, 0.8);
}

/* Timer urgency – turns red when low */
.tt-timer.tt-urgent {
    color: #ff3344;
    text-shadow: 0 0 10px rgba(255, 50, 50, 0.6);
}
.tt-timer.tt-urgent span {
    color: #ff3344;
    text-shadow: 0 0 14px rgba(255, 50, 50, 0.8);
    animation: ttTimerPulse 0.5s ease-in-out infinite;
}
@keyframes ttTimerPulse {
    50% { transform: scale(1.1); }
}